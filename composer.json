{
  "name": "mitmelon/zionxmemory",
  "description": "Production-ready, research-backed, enterprise-grade adaptive memory system that maintains the core principle: ZionXMemory is memory infrastructure, not an agent controller.",
  "license": "MIT",
  "authors": [
    {
      "email": "manomitehq@gmail.com",
      "name": "Manomite Limited"
    }
  ],
  "autoload": {
      "psr-4": {
          "ZionXMemory\\": "src/"
      }
  },
  "autoload-dev": {
      "psr-4": {
          "ZionXMemory\\Tests\\": "tests/"
      }
  },
  "scripts": {
      "test": "phpunit",
      "test-coverage": "phpunit --coverage-html coverage"
  },
  "config": {
    "process-timeout": 600,
    "optimize-autoloader": true,
    "sort-packages": true,
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": ">=8.1",
    "ext-json": "*",
    "psr/log": "^3.0",
    "ramsey/uuid": "^4.7"
  },
  "require-dev": {
      "phpunit/phpunit": "^10.0",
      "mockery/mockery": "^1.6"
  },
  "type": "library"
}