{
    "name": "banking/ai-memory",
    "description": "Banking-Grade Hybrid AI Memory System with Mindscape RAG + Graph RAG",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Banking AI Team",
            "email": "dev@banking-ai.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "psr/log": "^3.0",
        "ramsey/uuid": "^4.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "BankingAI\\Memory\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BankingAI\\Memory\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
